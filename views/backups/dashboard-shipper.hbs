                                <td>
                                    <span class="badge bg-secondary">{{this.equipmentType}}</span>
                                </td>
                                <td>
                                    {{formatNumber this.weight}} lbs
                                </td>
                                <td>
                                    {{this.status}}
                                </td>
                            </tr>
